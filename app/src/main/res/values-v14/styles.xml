<?xml version="1.0" encoding="utf-8"?>
<!-- See http://developer.android.com/guide/topics/resources/providing-resources.html#AlternativeResources
         http://developer.android.com/guide/topics/manifest/uses-sdk-element.html#ApiLevels -->
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Wspr</item>
    </style>

    <!-- ActionBar style -->
    <style name="ActionBar.Solid.Wspr" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/wspr_blue</item>
    </style>

    <!-- Main activity theme -->
    <style name="WsprTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Wspr.NoTitle</item>
    </style>

    <!-- Main activity action bar style -->
    <style name="ActionBar.Solid.Wspr.NoTitle" parent="@style/ActionBar.Solid.Wspr">
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:logo">@drawable/ic_logo</item>
    </style>
</resources>