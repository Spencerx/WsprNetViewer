<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for wspr data list item for future day (not today) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:background="@drawable/touch_selector">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/list_item_timestamp_textview"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="13:14"
            android:singleLine="false"
            android:layout_gravity="center"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:gravity="right"
            android:textStyle="bold" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/list_item_icon"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:src="@drawable/ic_signal_neg_00" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_item_txgridsquare_label_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="tx:"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_weight="1"
                android:gravity="right" />
            <TextView
                android:id="@+id/list_item_txgridsquare_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="JO31le"
                android:textAppearance="?android:textAppearanceMedium"
                android:typeface="monospace"
                android:textStyle="bold"
                android:layout_weight="4"
                android:gravity="left" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_item_rxgridsquare_label_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="rx:"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_weight="1"
                android:gravity="right" />
            <TextView
                android:id="@+id/list_item_rxgridsquare_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="JO59bh"
                android:textAppearance="?android:textAppearanceMedium"
                android:typeface="monospace"
                android:textStyle="bold"
                android:layout_weight="4"
                android:gravity="left" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_item_txcallsign_label_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="tx:"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#ff804000" />
            <TextView
                android:id="@+id/list_item_txcallsign_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="W1ABC"
                android:textAppearance="?android:textAppearanceMedium"
                android:typeface="monospace"
                android:textStyle="bold"
                android:layout_weight="4"
                android:gravity="left"
                android:textColor="#ff804000" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_item_rxcallsign_label_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="rx:"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#ff804000" />
            <TextView
                android:id="@+id/list_item_rxcallsign_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="T5/T61AA"
                android:textAppearance="?android:textAppearanceMedium"
                android:typeface="monospace"
                android:textStyle="bold"
                android:layout_weight="4"
                android:gravity="left"
                android:textColor="#ff804000" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_item_txfreqmhz_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="144.097"
                android:textAppearance="?android:textAppearanceMedium"
                android:typeface="monospace"
                android:textStyle="bold"
                android:layout_weight="2"
                android:gravity="right" />
            <TextView
                android:id="@+id/list_item_txfreqmhz_label_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="MHz"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_item_rxsnr_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-4"
                android:textAppearance="?android:textAppearanceMedium"
                android:typeface="monospace"
                android:textStyle="bold"
                android:layout_weight="4"
                android:gravity="right" />
            <TextView
                android:id="@+id/list_item_rxsnr_label_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="dB SNR"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_item_distance_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="925"
                android:textAppearance="?android:textAppearanceMedium"
                android:typeface="monospace"
                android:textStyle="bold"
                android:layout_weight="4"
                android:gravity="right" />
            <TextView
                android:id="@+id/list_item_distance_label_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text=" km"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_weight="2" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>